% 課題６　画像の二値化 
% 課題作成にあたっては「Lenna」以外の画像を用いよ． 


clear; % 変数のオールクリア 
ORG=imread('Penguins.jpg'); % 原画像の入力 
ORG = rgb2gray(ORG); 
imagesc(ORG); colormap(gray); colorbar; % 画像の表示 
pause; % 一時停止 

[xsize,ysize]=size(ORG);  %size(ORG)=[768,1024]
S= 150;
for i=1:xsize
for j=1:ysize
    if (ORG(i, j) > S)
         ORG(i, j)=255;     %白
else
    ORG(i, j)=0;            %黒
end
end
end
imagesc(ORG); colormap(gray); colorbar;

